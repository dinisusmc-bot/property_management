# Athena Configuration Example
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=athena
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=athena
DATABASE_URL=postgresql://athena:your_secure_password_here@postgres:5432/athena

# ============================================
# MongoDB Configuration
# ============================================
MONGO_INITDB_ROOT_USERNAME=athena
MONGO_INITDB_ROOT_PASSWORD=your_mongo_password_here
MONGODB_URL=mongodb://athena:your_mongo_password_here@mongodb:27017/

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_DEFAULT_USER=athena
RABBITMQ_DEFAULT_PASS=your_rabbitmq_password_here

# ============================================
# JWT Configuration
# ============================================
SECRET_KEY=your_jwt_secret_key_here_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password_here
FROM_EMAIL=noreply@athena.com
FROM_NAME=Athena Charter Management

# ============================================
# Airflow Configuration
# ============================================
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://athena:your_secure_password_here@postgres/airflow
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=your_airflow_password_here

# ============================================
# Application Configuration
# ============================================
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# Service Ports
# ============================================
FRONTEND_PORT=3000
KONG_PROXY_PORT=8080
KONG_ADMIN_PORT=8001
AUTH_SERVICE_PORT=8000
CHARTER_SERVICE_PORT=8001
CLIENT_SERVICE_PORT=8002
DOCUMENT_SERVICE_PORT=8003
NOTIFICATION_SERVICE_PORT=8004
PAYMENT_SERVICE_PORT=8005
AIRFLOW_WEBSERVER_PORT=8081
