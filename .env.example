# Athena Charter Management System - Environment Variables
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=athena
POSTGRES_PASSWORD=athena_dev_password
POSTGRES_DB=athena
DATABASE_URL=postgresql://athena:athena_dev_password@postgres:5432/athena

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_DEFAULT_USER=athena
RABBITMQ_DEFAULT_PASS=athena_dev_password
RABBITMQ_URL=amqp://athena:athena_dev_password@rabbitmq:5672/

# ============================================
# MongoDB Configuration
# ============================================
MONGO_INITDB_ROOT_USERNAME=athena
MONGO_INITDB_ROOT_PASSWORD=athena_dev_password
MONGO_INITDB_DATABASE=athena_documents
MONGODB_URL=mongodb://athena:athena_dev_password@mongodb:27017/athena_documents?authSource=admin

# ============================================
# Security
# ============================================
SECRET_KEY=dev_secret_key_change_in_production

# ============================================
# Service URLs (Internal Docker Network)
# ============================================
AUTH_SERVICE_URL=http://auth-service:8000
CHARTER_SERVICE_URL=http://charter-service:8000
CLIENT_SERVICE_URL=http://client-service:8000
PRICING_SERVICE_URL=http://pricing-service:8000
PAYMENT_SERVICE_URL=http://payment-service:8004
DOCUMENT_SERVICE_URL=http://document-service:8003
NOTIFICATION_SERVICE_URL=http://notification-service:8005
SALES_SERVICE_URL=http://sales-service:8000
VENDOR_SERVICE_URL=http://vendor-service:8000

# ============================================
# External API Keys
# ============================================
# Stripe Payment Integration
# Get your keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_API_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder

# TomTom Geocoding & Routing API
# Get your key from: https://developer.tomtom.com/ (2,500 free requests/day)
TOMTOM_API_KEY=your_tomtom_api_key_here

# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@athena.com
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@athena.com

# ============================================
# Twilio Configuration (SMS/Voice)
# ============================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# Auth Service Configuration
# ============================================
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Document Service Configuration
# ============================================
MAX_FILE_SIZE=10485760

# ============================================
# Kong API Gateway Database
# ============================================
KONG_POSTGRES_USER=kong
KONG_POSTGRES_PASSWORD=kong
KONG_POSTGRES_DB=kong

# ============================================
# Airflow Database Configuration
# ============================================
AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=airflow
AIRFLOW_POSTGRES_DB=airflow

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost:8080

# ============================================
# Change Management Configuration
# ============================================
AUTO_APPROVE_MINOR_CHANGES=false
REQUIRE_MANAGER_APPROVAL_THRESHOLD=500
CHANGE_NOTIFICATION_ENABLED=true

# ============================================
# Service Ports
# ============================================
SERVICE_PORT=8000
